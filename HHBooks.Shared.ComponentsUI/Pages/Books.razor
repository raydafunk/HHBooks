@page "/"
@page "/page/{pageNo:int?}"
<PageTitle>Home | HH Books </PageTitle>

<SectionContent SectionName="PageTitle">
    <h1 class="m-0 text-white fw-bold">HHBooks</h1>
    <h3 class="text-white mt-2"> Welcome to hundreds of popular books</h3>
</SectionContent>

<div class="container-lg">
    <div class="row">
        <div class="col-md-9">
            <div class="row">
                <div class="col-sm-12">
                    <div class="genre-list">
                        <div class="genre-item @(string.IsNullOrWhiteSpace(GenreSlug) ? "active": "")">
                            <a class="genre-link" href="/" title="Top Books">Top Books</a>
                        </div>
                        @foreach (var g in _genres)
                        {
                            <div class="genre-item@(GenreSlug == g.Slug ? "active": "")">
                                <a class="genre-link" href="?genre=@g.Slug" title="@g.Name Books">@g.Name</a>
                            </div>
                        }
                    </div>
                </div>
                <h3 class="mt-mb-3 heading">@_heading</h3>

                <div class="row">
                    @foreach (var b in _books)
                    {
                        <div class=" book-block col-sm-6 col-lg-3">
                            <a href="/books/@b.ID" title="@b.Title">
                                <figure class="image-box bg-main-light2">
                                    <img src="@b.Image" alt="Ttile" />
                                </figure>
                                <div class"p-2">
                                    <h6 class="text-main heading text-center">@b.Title</h6>
                                </div>
                            </a>
                        </div>
                    }
                </div>

            </div>
        </div>
        <div class="col-md-3">
            <div class="popular-books-container">
                <h3 class="m-0 text-center py-3 bg-white heading">Popular Books</h3>
                 <div class="   ">
                     @foreach ( var b in _popularbooks)
                    {
                      <div class="popualar-book-item">
                          <a href="/book/@b.ID" title="@b.Title">
                              <img src="@b.Image" alt="@b.Title" class="me-3"/>
                          </a>
                          <div class="d-flex flex-column justify-content-center">
                              <a href="/book/@b.ID" class="book-title" title="@b.Title">@b.Title</a>
                              <a href="/authors/@b.Author.Slug/books" title="Books by @b.Author.Name" class="book-author">
                                 by @b.Author.Name 
                              </a>
                          </div>
                      </div>
                    }
                 </div>
            </div>
        </div>
    </div>
</div>

